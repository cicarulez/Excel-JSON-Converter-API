{
  "name": "excel-json-converter-api",
  "version": "1.0.0",
  "description": "API to seamlessly convert Excel to JSON & generate Excel matrices from JSON. Streamline data interchange between widely-used formats.",
  "scripts": {
    "start:dev": "nodemon",
    "start": "node -r module-alias/register ./dist --env=developement",
    "build": "node build.js"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts, html",
    "ignore": [
      "*.xlsx",
      "src/public",
      "src/routes.ts"
    ],
    "exec": "npx tsoa spec-and-routes && ts-node -r tsconfig-paths/register ./src"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cicarulez/Excel-JSON-Converter-API.git"
  },
  "keywords": [
    "Excel",
    "JSON",
    "Converter",
    "API",
    "Microservice",
    "Data",
    "Interchange",
    "Excel-to-JSON",
    "JSON-to-Excel",
    "Data",
    "Transformation",
    "File",
    "Conversion",
    "Excel",
    "Matrices",
    "Data",
    "Processing",
    "RESTful",
    "API",
    "Data",
    "Integration",
    "Development",
    "Tool",
    "Structured",
    "Data"
  ],
  "author": "Davide Cappa",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cicarulez/Excel-JSON-Converter-API/issues"
  },
  "homepage": "https://github.com/cicarulez/Excel-JSON-Converter-API#readme",
  "dependencies": {
    "exceljs": "^4.4.0",
    "express": "^4.18.2",
    "tsoa": "^5.1.1",
    "cookie-parser": "^1.4.6",
    "dotenv": "^8.6.0",
    "helmet": "^4.6.0",
    "swagger-ui-express": "^4.6.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.5",
    "@types/cookie-parser": "^1.4.3",
    "@types/swagger-ui-express": "^4.1.3",
    "fs-extra": "^9.1.0",
    "ts-node": "^10.8.1",
    "tsconfig-paths": "^3.14.2",
    "nodemon": "^2.0.19",
    "typescript": "^5.3.3"
  }
}
